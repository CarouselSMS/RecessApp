<%= @page_title = 'Reset Password' %>

<% content_for :description_header, "Reset Password" %>
<% content_for :header_class, "reset-header" %>

<% content_for :subpagetopcontent do %>
  <div id="subpage-top-content">
    <div id="subpage-main">
      <div id="subpage-left">
<% end %>

<% content_for :subpageleftcontent do %>
  <p>
    To reset your password, enter the new password you&rsquo;d like to use in the form below.  After submitting the form, you&rsquo;ll be asked to log in with the new password.
  </p>
  <% form_for :user, @user, :action => 'reset', :token => params[:token] do |f| %>
    <% if @user.errors.any? %>
      <div class="errorExplanation" id="errorExplanation">
        <h2>Some errors were encountered while updating your account</h2>
        <ul>
          <%= @user.errors.full_messages.map {|e| content_tag('li', e)} %>
        </ul>
      </div>
    <% end %>
    <label for="password">Password:</label>
    <%= f.password_field :password %>
    <label for="password_confirmation">Password Confirmation:</label>
    <%= f.password_field :password_confirmation %>
    <br/>
    <%= submit_tag 'Change password' %>
  <% end %>
  </div> <!-- #subpage-left -->
</div><!-- #subpage-main -->
<% end %>

<% content_for :subpagesidebar do %>
<div id="subpage-sidebar" class="content-sidebar">
  <h3>Reset your password here.</h3>
 </div> <!-- #subpage-sidebar -->
</div> <!-- missing closing div -->
<% end %>