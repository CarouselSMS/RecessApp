  - else
    - if admin?
      %ul.faccount
        %li
          %h3= tab_link_to :account,      'Account',        account_url
        %li
          %h5= link_to 'Locations',    locations_path
        %li
          %h5= link_to 'Users',        '/users'
        %li
          %h5= link_to 'Edit account', edit_account_url
        - unless current_account.locally_registered?
          %li
            %h5= link_to 'Change plan',  plan_account_url
        %li
          %h5= link_to 'Billing info', billing_account_url
        %li
          %h5= link_to 'Cancel plan',  cancel_account_url
    %ul.foffers
      %li
        %h3= tab_link_to :offers,         'Offers',         offers_path
      %li
        %h5= link_to "Add an offer", new_offer_path
    %ul.fsubscriptions
      %li
        %h3= tab_link_to :subscribers,    'Subscribers',    subscribers_path
    %ul.fmessages
      %li
        %h3= tab_link_to :messages,       'Messages',       messages_path
    %ul.fstatistics
      %li
        %h3= tab_link_to :statistics,     'Statistics',     statistics_path