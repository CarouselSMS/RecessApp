.nav.signedin
  - if admin_subdomain?
    %ul.fsubscriptions
      %li
        %h3= tab_link_to :subscriptions,  'Subscriptions',  admin_subscriptions_path
    %ul.faccounts
      %li
        %h3= tab_link_to :accounts,       'Accounts',       admin_accounts_path
        %ul
          %li
            %h5= link_to "All Accounts in CSV", admin_accounts_path(:format => 'csv')
    %ul.fplans
      %li
        %h3= tab_link_to :plans,          'Plans',          admin_subscription_plans_path
