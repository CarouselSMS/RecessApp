<% end %>

<% content_for :description_header, "Toss the plastic pager and take your time back. With text message paging, you're finally free." %>
<% content_for :header_class, "guests-header" %>

<% content_for :subpagetopcontent do %>
  <%= render(:partial =>  "subpagetopcontent", :locals => { :header => "Guests" }) %>
