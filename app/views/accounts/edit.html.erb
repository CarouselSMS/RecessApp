<h1><%= @page_title = 'Change account settings' %></h1>

<% form_for :account, @account, :url => { :action => 'update' }, :html => { :method => :put } do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name %>
  <%= render :partial => "venue_fields", :locals => { :f => f }%>
  <%= submit_or_cancel :action => 'show' %>
<% end %>